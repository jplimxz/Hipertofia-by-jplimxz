<body>

    <div class="container">
        
        <!-- Cabeçalho -->
        <div class="header-icon">
            <i class="fas fa-dumbbell"></i>
        </div>
        <h1>Extrator DMX</h1>
        <p>Separa automaticamente a sessão de "Equipamentos Disponíveis" (Páginas 13 a 25).</p>

        <!-- Área de Upload -->
        
        <!-- Passo 1: Selecionar -->
        <div id="upload-section" class="upload-section">
            <label class="upload-box">
                <i class="fas fa-file-upload"></i>
                <span class="title">Clique para selecionar o PDF</span>
                <span class="subtitle">Formulário Completo DMX</span>
                <input type="file" id="pdfInput" accept=".pdf" style="display: none;" onchange="processFile()">
            </label>
        </div>

        <!-- Loading -->
        <div id="loading-section" class="loading-section">
            <i class="fas fa-circle-notch fa-spin fa-spinner"></i>
            <p style="margin-top: 1rem; font-weight: 600;">Processando páginas...</p>
        </div>

        <!-- Passo 2: Download -->
        <div id="download-section" class="download-section">
            <div class="success-msg">
                <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 0.25rem; font-weight: bold;">
                    <i class="fas fa-check-circle" style="margin-right: 0.5rem;"></i>
                    Arquivo Pronto!
                </div>
                <div id="file-info" style="font-size: 0.85rem; opacity: 0.9;"></div>
            </div>

            <a id="downloadLink" href="#" class="btn-download">
                <i class="fas fa-download"></i>
                <span>BAIXAR ARQUIVO CORTADO</span>
            </a>

            <button onclick="resetApp()" class="btn-reset">
                Fazer outro arquivo
            </button>
        </div>

        <!-- Mensagem de Erro -->
        <div id="error-message" class="error-message">
            <div style="font-weight: bold; margin-bottom: 0.25rem;">Erro</div>
            <div id="error-text">Algo deu errado.</div>
        </div>

        <div class="footer">
            DMX Performance & Fit Tools
        </div>
    </div>

    <script>
        // CONFIGURAÇÃO DAS PÁGINAS AQUI
        // PDF começa na página 0 na programação.
        // O usuário vê página 13, então índice é 12.
        // O usuário vê página 25, então índice é 24.
        const START_PAGE_INDEX = 12; // Página 13
        const END_PAGE_INDEX = 24;   // Página 25

        async function processFile() {
            const input = document.getElementById('pdfInput');
            const file = input.files[0];
            
            if (!file) return;

            // UI Changes
            document.getElementById('upload-section').classList.add('hidden');
            document.getElementById('loading-section').classList.add('active');
            document.getElementById('error-message').classList.remove('active');

            try {
                // Ler o arquivo como ArrayBuffer
                const arrayBuffer = await file.arrayBuffer();

                // Carregar o PDF usando pdf-lib
                const pdfDoc = await PDFLib.PDFDocument.load(arrayBuffer);
                
                // Criar um novo documento PDF
                const newPdf = await PDFLib.PDFDocument.create();

                // Verificar se o PDF tem páginas suficientes
                const totalPages = pdfDoc.getPageCount();
                if (totalPages < END_PAGE_INDEX) {
                    throw new Error(`O PDF enviado tem apenas ${totalPages} páginas. Precisa ter pelo menos 25.`);
                }

                // Criar array de índices para copiar
                const pageIndices = [];
                for (let i = START_PAGE_INDEX; i <= END_PAGE_INDEX; i++) {
                    pageIndices.push(i);
                }

                // Copiar as páginas
                const copiedPages = await newPdf.copyPages(pdfDoc, pageIndices);

                // Adicionar as páginas copiadas ao novo documento
                copiedPages.forEach((page) => {
                    newPdf.addPage(page);
                });

                // Salvar o novo PDF
                const pdfBytes = await newPdf.save();

                // Criar o Blob para download
                const blob = new Blob([pdfBytes], { type: "application/pdf" });
                const url = URL.createObjectURL(blob);
                
                // Configurar botão de download
                const downloadLink = document.getElementById('downloadLink');
                downloadLink.href = url;
                downloadLink.download = "DMX_Equipamentos_Disponiveis.pdf";

                // Atualizar texto informativo
                document.getElementById('file-info').textContent = `Extraído de: ${file.name}`;

                // Mostrar seção de download
                document.getElementById('loading-section').classList.remove('active');
                document.getElementById('download-section').classList.add('active');

            } catch (error) {
                console.error(error);
                document.getElementById('loading-section').classList.remove('active');
                document.getElementById('error-message').classList.add('active');
                document.getElementById('error-text').textContent = error.message;
                
                setTimeout(resetApp, 4000);
            }
        }

        function resetApp() {
            document.getElementById('pdfInput').value = "";
            document.getElementById('download-section').classList.remove('active');
            document.getElementById('error-message').classList.remove('active');
            document.getElementById('upload-section').classList.remove('hidden');
        }
    </script>
</body>
